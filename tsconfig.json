{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "target": "es2021",
    "lib": ["es2021"]
  }
}
